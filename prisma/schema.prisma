// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Item {
  id          String  @id
  title       String
  url         String
  category    String
  totalPage   Int     @default(0)
  publishedAt String
  removed     Boolean @default(false)
  Image       Image?
  Queue       Queue?
}

model Image {
  itemId String @id
  item   Item   @relation(fields: [itemId], references: [id])
  image  Bytes
}

model Latest {
  itemId      String @id
  publishedAt String
}

model Queue {
  id        Int      @id @default(autoincrement())
  url       String
  directory String
  dequeued  Boolean
  itemId    String?  @unique
  Item      Item?    @relation(fields: [itemId], references: [id])
  createdAt DateTime
  updatedAt DateTime
}

model NotReadCount {
  id         Int      @id @default(autoincrement())
  count      Int
  lastReadAt DateTime
}
